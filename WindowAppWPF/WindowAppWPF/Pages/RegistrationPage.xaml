<Page x:Class="WindowAppWPF.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WindowAppWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage">

    <Grid>
        <Border Background="Gray" CornerRadius="25" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Width="250" >
                <TextBlock Text="Регистрация" HorizontalAlignment="Center" FontSize="30" Margin="0 10 0 0"/>
                <TextBlock Text="Логин:" HorizontalAlignment="Center" Width="200" Margin="0 10 0 0"/>
                <TextBox Width="200" x:Name="LoginField"/>
                <TextBlock Text="Пароль:" HorizontalAlignment="Center" Width="200" Margin="0 10 0 0"/>
                <PasswordBox Width="200" x:Name="PasswordField"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Click="RegButton_Click" Content="Зарегистрироваться" x:Name="RegButton" Width="125" Margin="0 10 10 10"/>
                    <Button x:Name="Back" Click="Back_Click" Content="Назад" Width="40" Height="20"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
